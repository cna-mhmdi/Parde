<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frag_movie"
    tools:context=".fragments.MovieFragment"
    android:padding="8dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/layout_ota_movie_recyclerview"/>
            <include layout="@layout/layout_fy_movie_recyclerview"/>
            <include layout="@layout/layout_uc_movie_recyclerview"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>